{
  "rules": {
    "rooms": {
      "$roomCode": {
        ".read": "data.child('createdAt').val() == null || (now - data.child('createdAt').val()) <= 3600000",
        ".write": "newData.hasChildren(['roomCode', 'createdAt', 'players', 'gameState']) && newData.child('roomCode').val().matches(/^\\d{5}$/) && (newData.child('createdAt').val() == null || (now - newData.child('createdAt').val()) <= 3600000)",
        
        "roomCode": {
          ".validate": "newData.isString() && newData.val().matches(/^\\d{5}$/)"
        },
        
        "createdAt": {
          ".validate": "newData.isNumber() && newData.val() > 0 && newData.val() <= now"
        },
        
        "players": {
          "$playerId": {
            ".validate": "$playerId.matches(/^(player1|player2)$/)",
            
            "id": {
              ".validate": "newData.isString() && (newData.val() === 'player1' || newData.val() === 'player2')"
            },
            
            "name": {
              ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
            },
            
            "connected": {
              ".validate": "newData.isBoolean()"
            },
            
            "role": {
              ".validate": "newData.val() === null || (newData.isString() && (newData.val() === 'player' || newData.val() === 'guide'))"
            },
            
            "character": {
              ".validate": "newData.val() === null || (newData.isString() && (newData.val() === 'ghost' || newData.val() === 'alien'))"
            },
            
            "rtcOffer": {
              ".validate": "newData.val() === null || newData.hasChildren()"
            },
            
            "rtcAnswer": {
              ".validate": "newData.val() === null || newData.hasChildren()"
            },
            
            "iceCandidates": {
              ".validate": "newData.hasChildren()",
              "$candidateId": {
                ".validate": "newData.val() === null || newData.hasChildren()"
              }
            },
            
            "$other": {
              ".validate": false
            }
          }
        },
        
        "gameState": {
          "status": {
            ".validate": "newData.isString() && (newData.val() === 'waiting' || newData.val() === 'ready' || newData.val() === 'playing' || newData.val() === 'roundComplete')"
          },
          
          "currentRound": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          
          "player1Ready": {
            ".validate": "newData.isBoolean()"
          },
          
          "player2Ready": {
            ".validate": "newData.isBoolean()"
          },
          
          "$other": {
            ".validate": false
          }
        },
        
        "$other": {
          ".validate": false
        }
      }
    }
  }
}